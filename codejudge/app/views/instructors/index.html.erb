<%= render 'layouts/flash' %>

<h1>Welcome Instructor!</h1>
<div id="classes_list_table" class="table col-12">
  <table>
    <thead>
      <tr>
        <th><h3 class="col-12">Classes</h3></th>
        <th><h3 class="col-12">Classcode</h3></th>
        <th colspan="8" id = "new_class_button"><%= link_to "New Class", new_group_path, :class => "button" , style: "float: right; position: right;"%></th>
      </tr>
    </thead>
    <tbody>
    <% for group in @groups %>
      <tr>
        <td class="grouptitle"><%=link_to group.group_title, details_group_url(group.id)%></td>
        <td><b><%=link_to group.classcode, details_group_url(group.id)%></b></td>
        <th colspan="2"></th>
        <td><%= link_to "Modify", edit_group_path(group) %></td>
        <td><%= link_to "Delete", group , method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>