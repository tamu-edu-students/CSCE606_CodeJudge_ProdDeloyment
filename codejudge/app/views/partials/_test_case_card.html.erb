<div class="test-case-card <%= defined?(passed) && passed ? "test-case-card--success" : "test-case-card--failed" %>">
  <div class="test-case-card__status">
    <% if defined?(passed) %>
      <p><%= passed ? "Passed" : "Failed" %></p>
    <% else %>
      <p>Running...</p>
    <% end %>
  </div>
  <span class="test-case-card__separator"></span>
  <p class="test-case-card__copy"><%= finished_at if defined?(finished_at) %></p>
  <p class="test-case-card__copy"><strong>Input:  </strong><%= test_case_input %></p>
  <p class="test-case-card__copy"><strong>Expected Output:  </strong><%= test_case_output %></p>


</div>